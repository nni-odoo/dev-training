<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="view_car_list">
      <field name="name">car list</field>
      <field name="model">car.car</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="brand"/>
          <field name="miles"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="car_action_window">
      <field name="name">Car</field>
      <field name="res_model">car.car</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem name="Car" id="menu_root" action="car_action_window"/>

  </data>
</odoo>
